{% extends 'base.html.twig' %}

{% block title 'Blog' %}

{% block body %}
    <h1>Bienvenue sur le blog</h1>
    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('blog.show', {'slug': post.slug, 'id': post.id}) }}">{{ post.name }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}